                <TableColumn fx:id="idColumn" prefWidth="163.0" text="ID"/>
                <TableColumn fx:id="firstNameColumn" minWidth="0.0" prefWidth="177.0"
                             text="First Name"/>
                <TableColumn fx:id="lastNameColumn" minWidth="1.0" prefWidth="180.0"
