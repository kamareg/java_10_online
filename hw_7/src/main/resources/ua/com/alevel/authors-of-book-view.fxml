            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ua.com.alevel.controller.AuthorsOfBookController">
    <children>
        <VBox layoutX="45.0" layoutY="285.0" prefHeight="75.0" prefWidth="397.0">
            <children>
                <TableView fx:id="authorsForChooseTable" prefHeight="117.0" prefWidth="397.0">
                    <columns>
                        <TableColumn fx:id="idColumnAuthorsForChooseTable" prefWidth="105.0"
                                     text="ID"/>
                        <TableColumn fx:id="firstNameColumnAuthorsForChooseTable" prefWidth="174.0"
                                     text="First Name"/>
                        <TableColumn fx:id="lastNameColumnAuthorsForChooseTable" minWidth="1.0"
                                     prefWidth="105.0"
                                     text="Last Name"/>
                    </columns>
                </TableView>
            </children>
        </VBox>
        <TableView fx:id="authorsTable" layoutX="45.0" layoutY="47.0" prefHeight="196.0"
